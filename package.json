{
  "name": "root",
  "private": true,
  "devDependencies": {
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "lerna": "^3.16.4",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "lerna run lint --stream --parallel",
    "test": "lerna run test --stream --parallel",
    "build": "lerna run build --stream --parallel",
    "ci": "lerna run ci --stream",
    "update-version": "lerna version --no-push",
    "merge-master": "git push && git checkout master && git pull && git merge develop -m \"Merge develop -> master\" --no-ff && git push && git checkout develop",
    "publish-all": "lerna publish from-package --yes --registry http://verdaccio.smp.sm-soft.ru/",
    "canary": "lerna run ci --stream --parallel --since master && lerna publish --canary --yes --registry http://verdaccio.smp.sm-soft.ru/",
    "commit": "git add . && git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "version": "0.0.0"
}
