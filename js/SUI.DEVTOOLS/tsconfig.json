{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
//    "strict": true,
    "paths": {
      // ./node_modules/@sui/sui-builder/src -> ./src
      "@/*": ["../../../src/*"],
      "@@/*": ["../../../src/.umi/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    // ./node_modules/@sui/sui-builder/src -> ./src
    "../../../src/**/*",
    "../../../.umirc.ts",
    "../../../typings.d.ts"
  ]
}
