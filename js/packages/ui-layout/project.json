{
  "name": "ui-layout",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ui-layout/src",
  "projectType": "library",
  "tags": [
    "type:ui"
  ],
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/ui-layout/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/ui-layout",
        "tsConfig": "packages/ui-layout/tsconfig.lib.json",
        "project": "packages/ui-layout/package.json",
        "entryFile": "packages/ui-layout/src/index.ts",
        "external": [
          "react",
          "react-dom",
          "@emotion/react/jsx-runtime"
        ],
        "rollupConfig": "@nx/react/plugins/bundle-rollup",
        "compiler": "babel",
        "assets": [
          {
            "glob": "packages/ui-layout/README.md",
            "input": ".",
            "output": "."
          }
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/ui-layout/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs ui-layout {args.ver} {args.tag}",
      "dependsOn": [
        "build"
      ]
    }
  }
}
