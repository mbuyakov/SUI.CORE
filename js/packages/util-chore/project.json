{
  "name": "util-chore",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/util-chore/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/util-chore",
        "main": "packages/util-chore/src/index.ts",
        "tsConfig": "packages/util-chore/tsconfig.lib.json",
        "assets": ["packages/util-chore/*.md"]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs util-chore {args.ver} {args.tag}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/util-chore/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/util-chore/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["type:util"]
}
