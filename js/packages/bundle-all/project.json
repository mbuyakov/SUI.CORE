{
  "name": "bundle-all",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/bundle-all/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/bundle-all",
        "main": "packages/bundle-all/src/index.ts",
        "tsConfig": "packages/bundle-all/tsconfig.lib.json",
        "assets": ["packages/bundle-all/*.md"],
        "updateBuildableProjectDepsInPackageJson": true
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs bundle-all {args.ver} {args.tag}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/bundle-all/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/bundle-all/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "sonar": {
      "executor": "@koliveira15/nx-sonarqube:scan",
      "options": {
        "name": "bundle-all",
        "hostUrl": "https://sonar.suilib.ru",
        "projectKey": "SUI",
        "skipTargetDefaults": false,
        "branches": false,
        "qualityGate": false,
        "qualityGateTimeout": "300",
        "skipImplicitDeps": false,
        "testInclusions": "**/*.spec.ts,**/*.spec.tsx"
      }
    }
  },
  "tags": []
}
