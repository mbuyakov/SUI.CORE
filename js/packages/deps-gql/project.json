{
  "name": "deps-gql",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/deps-gql/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/deps-gql",
        "main": "packages/deps-gql/src/index.ts",
        "tsConfig": "packages/deps-gql/tsconfig.lib.json",
        "assets": [
          "packages/deps-gql/*.md"
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/deps-gql/**/*.ts",
          "packages/deps-gql/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/deps-gql/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs deps-gql {args.ver} {args.tag}",
      "dependsOn": [
        "build"
      ]
    }
  },
  "tags": [
    "type:deps"
  ]
}
